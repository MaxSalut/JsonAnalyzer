<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JsonAnalyzer.EditItemPage"
             Title="Edit Item">
    <ScrollView>
        <VerticalStackLayout Padding="10">
            <Label Text="Edit JSON Data:" FontAttributes="Bold" />
            <Editor x:Name="JsonEditor" AutoSize="TextChanges" />
            <Button Text="Save" Clicked="OnSaveClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
